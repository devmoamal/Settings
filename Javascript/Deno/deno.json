{
    "tasks": {
        "dev": "deno run --allow-env --allow-net --allow-read --allow-write --watch src/index.ts",
        "format": "deno fmt",
        "lint": "deno run -A npm:eslint .",
        "lint:fix": "deno run -A npm:eslint . --ext .ts,.js --fix"
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "lineWidth": 100,
        "semiColons": true,
        "include": ["src/", "."],
        "exclude": ["dist/", "node_modules/"]
    },
    "lint": {
        "include": ["src/", "."],
        "exclude": ["dist/"],
        "rules": {
            "tags": ["recommended"],
            "include": [
                "no-console",
                "no-var",
                "prefer-const",
                "no-throw-literal",
                "no-sparse-arrays"
            ],
            "exclude": []
        }
    }
}